<Window x:Class="ListBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBoxDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="625" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ListBox x:Name="lstCanvas" Width="600" Height="400">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        <Button Click="Button_Click">Change</Button>
        </StackPanel>
    </Grid>
</Window>
