
#:import toolbox toolbox
<ToolButton>:
    size_hint:None,None
    size:48,48
    group:'tool'
    canvas:
        PushMatrix:
        Translate:
            xy:self.x,self.y
    canvas.after:
        PopMatrix:

<ToolBox>:
    cols:2
    padding:2
    ToolCircle:
        canvas:
            Line:
                circle:24,24,14
    ToolLine:
        canvas:
            Line:
                points:10,10,38,38
    ToolStickMan:
        StickMan:
            pos_hint:{'center_x':0.5,'center_y':0.5}