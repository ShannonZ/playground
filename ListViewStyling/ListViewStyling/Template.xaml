<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:local="clr-namespace:ListViewStyling">
    <DataTemplate DataType="{x:Type local:ScanBase}">
        <UniformGrid Columns="2">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock >SF</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock >Sweep Width</TextBlock>
            
                <Button>kHz</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Button >TD</Button>
               
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock >Recycle Delay</TextBlock>
               
                <TextBlock>ms</TextBlock>
            </StackPanel>

           
        </UniformGrid>
    </DataTemplate>
</ResourceDictionary>